---
import type { SiteConfig } from "@types";

type Props = Pick<SiteConfig, "author" | "socialLinks">;

const { author, socialLinks } = Astro.props;
const currentYear = new Date().getFullYear();

const getIconPath = (text: string) => `/social/${text.toLowerCase()}.svg`;
---

<footer
  class="text-white w-full text-center pb-8 pt-5 px-5 border-t border-neutral/20"
>
  <ul class="flex flex-wrap gap-x-5 justify-center mb-5 text-xs">
    {
      socialLinks.map(({ text, href }) => (
        <li>
          <a
            href={href}
            target="_blank"
            class="hover:text-primary inline-block py-3 px-4 after:relative after:bottom-[-4px] after:content-[url(/external.svg)]"
          >
            <img
              src={getIconPath(text)}
              alt={`${text} icon`}
              class="w-7 h-7 inline-block mr-2"
            />
            {text}
          </a>
        </li>
      ))
    }
  </ul>
  <p class="text-xs">
    {author} © {currentYear}. <span class="text-neutral"
      >Designed & Developed by</span
    > Moisés Machuca modified from
    <a
      href="https://github.com/withastro/astro-zen"
      target="_blank"
      class="hover:text-primary inline-block after:relative after:bottom-[-4px] after:content-[url(/external.svg)]"
    >
      withastro/astro-zen
    </a>
  </p>
</footer>
