---
interface Props {
  text: string;
  href: string;
}

const { text, href } = Astro.props;

const [title_first, ...title_second] = text.split(" ") as [string, ...string[]];

let title_first_part = title_first;
let title_second_part = " " + title_second.join(" ");

if (title_second.length === 0) {
  title_first_part = title_first.trim().slice(0, 3);
  title_second_part = title_first.trim().slice(3);
}
---

<section id={href} class="py-24">
  <h2
    class="text-4xl md:text-5xl font-serif font-bold tracking-tighter text-white mb-14"
  >
    <span class="text-rose-500">{title_first_part}</span>{title_second_part}
  </h2>
  <slot />
</section>
