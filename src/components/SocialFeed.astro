---
import Section from "./Section.astro";
import { SITE_CONTENT } from "@config";

const { mediumPosts, tweets } = SITE_CONTENT.socialFeed;
---

<Section text="Latest Posts" href="social">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <div class="space-y-6">
      <h3
        class="text-2xl font-serif font-semibold text-white flex items-center gap-2"
      >
        <img src="/social/medium.svg" alt="Medium" class="w-8 h-8" />
        Latest on Medium
      </h3>
      {
        mediumPosts.length > 0 ? (
          mediumPosts.map(
            ({ title, subtitle, link, publishDate, readingTime, claps }) => (
              <a
                href={link}
                target="_blank"
                rel="noopener noreferrer"
                class="block p-6 rounded-lg bg-white/5 hover:bg-white/10 transition-colors"
              >
                <h4 class="text-xl font-serif text-white font-medium mb-2">
                  {title}
                </h4>
                <p class="text-white/70 mb-4">{subtitle}</p>
                <div class="flex items-center justify-between text-sm text-white/50">
                  <div class="flex items-center gap-4">
                    <span>{publishDate}</span>
                    <span>{readingTime} read</span>
                  </div>
                  {claps > 0 && (
                    <div class="flex items-center gap-1">
                      <span>üëè</span>
                      <span>{claps}</span>
                    </div>
                  )}
                </div>
              </a>
            ),
          )
        ) : (
          <p class="text-white/70">No Medium posts found</p>
        )
      }
    </div>

    <div class="space-y-6">
      <h3
        class="text-2xl font-serif font-semibold text-white flex items-center gap-2"
      >
        <img src="/social/twitter.svg" alt="Twitter" class="w-8 h-8" />
        Latest Tweets
      </h3>
      {
        tweets.length > 0 ? (
          tweets.map(({ text, link, publishDate, likes, retweets }) => (
            <a
              href={link}
              target="_blank"
              rel="noopener noreferrer"
              class="block p-6 rounded-lg bg-white/5 hover:bg-white/10 transition-colors"
            >
              <p class="text-white/90 mb-4 text-lg whitespace-pre-wrap">
                {text}
              </p>
              <div class="flex items-center justify-between text-sm text-white/50">
                <span>{publishDate}</span>
                <div class="flex items-center gap-4">
                  <div class="flex items-center gap-1">
                    <span>‚ù§Ô∏è</span>
                    <span>{likes}</span>
                  </div>
                  <div class="flex items-center gap-1">
                    <span>üîÑ</span>
                    <span>{retweets}</span>
                  </div>
                </div>
              </div>
            </a>
          ))
        ) : (
          <p class="text-white/70">No tweets found</p>
        )
      }
    </div>
  </div>
</Section>
